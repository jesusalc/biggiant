<h1>Listing Purchase Table Upload</h1>

<% if !@parsers.empty?  %>
	<h2>Current Data in the database</h2>
	<table>
	  <tr>
		<th>Purchaser name</th>
		<th>Item description</th>
		<th>Item price</th>
		<th>Purchase count</th>
		<th>Merchant address</th>
		<th>Merchant name</th>
		<th></th>
		<th></th>
		<th></th>
	  </tr>

	<% @parsers.each do |parser| %>
	  <tr>
		<td><%= parser.purchaser_name %></td>
		<td><%= parser.item_description %></td>
		<td><%= parser.item_price %></td>
		<td><%= parser.purchase_count %></td>
		<td><%= parser.merchant_address %></td>
		<td><%= parser.merchant_name %></td>
		<td><%= link_to 'Show', parser %></td>
		<td><%= link_to 'Edit', edit_parser_path(parser) %></td>
		<td><%= link_to 'Destroy', parser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />

	<%= render 'addnew' %>
<% else %>
	<h2>There is no data uploaded yet</h2>

	
	<%= render 'file' %>
	
	<h3>Or add by hand.</h3>
	
	
	<%= render 'addnew' %>
<% end %>
